<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/colorPrimaryDark"
        android:translationZ="1dp" />

    <LinearLayout
        android:id="@+id/schedule_table_top"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@id/status_bar"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schedule_weeks"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:drawableRight="@drawable/schedule_week_more"
            android:focusable="true"
            android:gravity="center"
            android:text="第 6 周"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/schedule_years"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="大三 第2学期"
            android:textColor="#ffffff"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/week_days"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_below="@id/schedule_table_top"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/day"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="top|center"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/z0"
                    android:layout_width="@dimen/table_width"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/z1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周一"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周二"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周三"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周四"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周五"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周六"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:id="@+id/z7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="周日"
                    android:textColor="@color/schedule_day_date_bg" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/d0"
                    android:layout_width="@dimen/table_width"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/d1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-1"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-2"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-3"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-4"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-5"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-6"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/d7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10-7"
                    android:textColor="@color/schedule_day_date_bg"
                    android:textSize="8sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




    <org.swuos.swuassistant.weight.ObservableScrollView
        android:id="@+id/schedule_table_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/v_bottom_i_h"
        android:paddingTop="111dp"

        android:scrollbars="none"
        android:translationZ="-1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/classs"
                android:layout_width="@dimen/table_width"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/classs1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:text="1"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:text="2"
                    android:textColor="@color/schedule_day_date_bg" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="3"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="4"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="5"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="6"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="7"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="8"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="9"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="10"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="11"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"

                    android:gravity="fill"
                    android:text="12"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:text="13"
                    android:textColor="@color/schedule_day_date_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/each_class_hight"
                    android:layout_gravity="center"
                    android:gravity="fill"
                    android:text="14"
                    android:textColor="@color/schedule_day_date_bg" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/class_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/table_width"
                android:layout_toRightOf="@+id/classs">

            </FrameLayout>
        </FrameLayout>
    </org.swuos.swuassistant.weight.ObservableScrollView>


</RelativeLayout>
